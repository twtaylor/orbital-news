{
  "name": "orbital-news-server",
  "version": "1.0.0",
  "description": "Backend API server for Orbital News",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "pnpm build && node dist/index.js",
    "dev:watch": "tsc -w & nodemon dist/index.js",
    "mongo:start": "node scripts/start-mongo.js",
    "mongo:status": "node scripts/mongo-status.js",
    "build": "tsc",
    "build:prod": "NODE_ENV=production pnpm clean && tsc",
    "clean": "rm -rf dist",
    "rebuild": "pnpm clean && pnpm build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "jest src/tests/services",
    "package": "mkdir -p package-tmp && cp -r dist package.json .env.example README.md package-tmp/ && cd package-tmp && npm install --production && cd .. && tar -czf orbital-news-server.tar.gz -C package-tmp . && rm -rf package-tmp"
  },
  "keywords": [
    "news",
    "aggregator",
    "api",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "compromise": "^14.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "geolib": "^3.3.4",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "node-fetch": "2",
    "node-geocoder": "^4.4.1",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
