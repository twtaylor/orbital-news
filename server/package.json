{
  "name": "orbital-news-server",
  "version": "1.0.0",
  "description": "Backend API server for Orbital News",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "pnpm build && node dist/index.js",
    "dev:watch": "tsc -w & nodemon dist/index.js",
    "mongo:start": "node scripts/start-mongo.js",
    "mongo:status": "node scripts/mongo-status.js",
    "build": "tsc",
    "postbuild": "mkdir -p dist/data && cp -r src/data/* dist/data/",
    "build:prod": "NODE_ENV=production pnpm clean && tsc",
    "clean": "rm -rf dist",
    "rebuild": "pnpm clean && pnpm build",
    "lint": "eslint 'src/**/*.ts' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:unused": "eslint 'src/**/*.ts' --rule 'unused-imports/no-unused-imports: error' --rule 'unused-imports/no-unused-vars: error'",
    "lint:errors-only": "eslint 'src/**/*.ts' --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "jest src/tests/services",
    "package": "mkdir -p package-tmp && cp -r dist package.json .env.example README.md package-tmp/ && cd package-tmp && npm install --production && cd .. && tar -czf orbital-news-server.tar.gz -C package-tmp . && rm -rf package-tmp"
  },
  "keywords": [
    "news",
    "aggregator",
    "api",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "cron-parser": "^5.1.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "geolib": "^3.3.4",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "node-geocoder": "^4.4.1",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.14.1",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
